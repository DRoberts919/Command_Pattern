<Page
    x:Class="DylanRoberts_Command.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DylanRoberts_Command"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="White">
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="300px"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>




        <Grid Grid.Column="0" >
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <!--Direction Buttons-->
            <Button Content="Up"
                    FontSize="40"
                    HorizontalAlignment="Center"
                    Background="Gray"
                    Foreground="White"
                    Grid.Row="0"
                    Click="Up_Button"
                    >
                
            </Button>
            <Button Content="Down"
                    FontSize="40"
                    HorizontalAlignment="Center"
                    Background="Gray"
                    Foreground="White"
                    Grid.Row="1"
                    Click="Down_Button">

            </Button>
            <Button Content="Left"
                    FontSize="40"
                    HorizontalAlignment="Center"
                    Background="Gray"
                    Foreground="White"
                    Grid.Row="2"
                    Click="Left_Button">

            </Button>
            <Button Content="Right"
                    FontSize="40"
                    HorizontalAlignment="Center"
                    Background="Gray"
                    Foreground="White"
                    Grid.Row="3"
                    Click="Right_Button">

            </Button>
            
            <!--Color Buttons-->
            <Button Content="Red"
                    FontSize="40"
                    HorizontalAlignment="Center"
                    Background="Red"
                    Foreground="White"
                    Grid.Row="4"
                    Click="Red_Button">

            </Button>
            <Button Content="Green"
                    FontSize="40"
                    HorizontalAlignment="Center"
                    Background="Green"
                    Foreground="White"
                    Grid.Row="5"
                    Click="Green_Button">

            </Button>
            <Button Content="Blue"
                    FontSize="40"
                    HorizontalAlignment="Center"
                    Background="Blue"
                    Foreground="White"
                    Grid.Row="6"
                    Click="Blue_Button">

            </Button>
            <Button Content="Yellow"
                    FontSize="40"
                    HorizontalAlignment="Center"
                    Background="Yellow"
                    Foreground="Black"
                    Grid.Row="7"
                    Click="Yellow_Button">

            </Button>
            
            <!--Undo Button-->

            <Button Content="Undo"
                    FontSize="40"
                    HorizontalAlignment="Center"
                    Background="Gray"
                    Foreground="White"
                    Grid.Row="8"
                    Click="Undo_Button">

            </Button>

        </Grid>
         
        <!--grid for moving the block-->
        

        <Canvas x:Name="gameBoard" Grid.Column="2" Background="Black">
            
        </Canvas>
        
        
        
    </Grid>
</Page>
